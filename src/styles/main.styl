html
  background black
  color white
  font-family 'Poppins', sans-serif
  font-size 16px
  scroll-behavior smooth
  text-rendering optimizeLegibility
  -webkit-font-smoothing auto
  
html, 
body, 
#___gatsby, 
#gatsby-focus-wrapper {
  height: 100%;
}

a
  text-decoration none
  color $blue
  font-weight 700
  transition color 1s ease
  &:hover
    color $gold

p
  margin-bottom 8px
  max-width 65ch
