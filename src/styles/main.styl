html
	background $whiteBg
	color $black
	font-family 'Poppins', sans-serif
	font-size 16px
	scroll-behavior smooth
	text-rendering optimizeLegibility
	-webkit-font-smoothing auto

a
	text-decoration none
	color $black
	font-weight 700
	&:hover
		span
			text-decoration underline

section a
	&:hover
		&:before
			display inline-block
			transform translate(2px, 0px) !important
			transition all 0.1s ease-out
		span
			text-decoration underline
	&:before
		margin-right .25em
		content "âž”"

	&#app-link
		padding 2px 8px
		margin-left 10px
		border 1px $black solid
		border-radius 2px
		&:before
			display none !important


h1, h2, h3, h4, p
	margin-bottom 2rem
	line-height 1.3


.yellow
	background $yellow
	transition background 0.2s ease-in

.yellow-font
	color $yellow
	font-weight 700

.bold
	font-weight 700

.not-yellow
	background $whiteBg
	transition background 0.2s ease-in

section
	display flex
	justify-content stretch

.wrap
	display flex
	width 100%
	max-width $maxWidth
	margin 0 auto
	padding 0 4vw
	justify-content space-between

.left
	flex 4 0
	margin-right 2rem

.right
	flex 3 0



nav
	position fixed
	width 100vw
	display flex
	justify-content space-between
	padding 1em 3vw
	align-items center
	svg
		width 40px
		height 40px
	ul
		display flex
		align-items center
		li
			margin-left 1.5em

.header-wrapper
	overflow-x hidden

#intro
	padding 34vh 0 24vh 0
	h1
		font-size $fontXL
		margin-bottom 1em


#about
	padding 10vh 0
	h2
		font-size $fontXL

#stage-1
	padding 20vh 0 20vh 0

#stage-2
	padding 15vh 0 10vh 0
	ul
		list-style-type square
		margin-left 2vh

#stage-3
	padding 15vh 0 22vh 0
	margin-bottom 5vh

@media (max-width: 1000px)
	#stage-3
		padding-bottom 15vh



#rewards
	padding 30vh 0 30vh 0
	h2
		font-size $fontXXL
		font-weight 700
		margin-bottom 1em
	.left .large
		font-size $fontXL - 4px
		font-weight 700
	.wrap
		flex-direction column
		> div
			display flex

#signup
	display flex
	align-items center
	font-size 20px
	svg
		width 2em
		height 2em
		margin-right .5em
	&:hover
		svg
			transform scale(1.2)
			transform-origin center
			transition all 0.2s ease-out
	&:before
		display none !important

.email-subscription
	input
		background white
		border 1px #ccc solid
		font-size 16px
		padding 10px
		width calc(70% - 48px)
		&[type="submit"]
			appearance none
			border-left none
			cursor pointer
			width 48px

#more
footer
	background $black
	color $white
	a
		color $white

#partners
	padding 2vh 0 10vh 0
	background #ffffff
	.wrap
		> div
			width 100%
	h3
		font-size $fontL
	.logos
		width 100%
		display flex
		justify-content space-around
		align-items center
		padding 2vh 0
		li
			margin 10px
		a
			display flex
			justify-content space-between
			text-align center
			flex-direction column
			&:before
				display none
		img
			width 100%
			height auto

#more
	padding 20vh 0
	h2
		font-size $fontXXL
	li
		font-size $fontL
		margin 1rem 0

footer
	padding-bottom 6vh
	.wrap
		align-items center
	p
		flex 3
		margin 0
	.address
		flex 3
		&:last-child
			flex 2
	#social
		flex 1
		max-width 90px
		display flex
		flex-wrap wrap
		justify-content space-between
		> a
			width 40px
			line-height 0
			margin 0


@media (max-width: 800px)
	#header
		margin-top 10vw !important
		max-height 600px


@media (max-width: 550px)
	nav
		position static
	#header
		margin-top 150px
		max-height 400px
	#intro
		padding 10vh 0 15vh 0
	#about
		padding 5vh 0
		.right > div
			padding 0 !important
	#rewards
		padding 15vh 0


@media (max-width: 750px)
	section .wrap
		flex-direction column
		.left
			margin-right 0
			margin-bottom 3rem
	#about
		padding 0
		.left
			display none
		.right div
			margin 30vh 0

	#rewards
		.wrap div
			flex-direction column
		h2
			font-size $fontXXL - 16px
	footer .wrap
		align-items flex-start
		flex-direction column
		p
		address
			margin-bottom 2rem
		#social
			max-width 100%
			a
				margin-right 1rem

@media (max-width: 600px)
	h1
		font-size $fontXL - 5px !important
	#rewards
		h2
			font-size $fontXL - 10px
		.large
			font-size $fontXL - 20px !important
